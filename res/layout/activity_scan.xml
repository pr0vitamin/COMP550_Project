<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- This is the list view for the scan activity. listitem_device.xml will populate this. -->

    <ListView
        android:id="@+id/device_list"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical" />
    
    <LinearLayout
		android:orientation="horizontal"
        android:background="@android:drawable/bottom_bar"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/device_list" >
        
	    <Button
	        android:id="@+id/on_off_button"
	        android:layout_width="0dp"
	        android:layout_weight="1.0"
	        android:layout_height="fill_parent"
	        android:textSize="20sp"
	        android:textStyle="bold"
	        android:text="@string/on_off_button"
	        android:onClick="lightOnOff" />
	
	    <Button
	        android:id="@+id/color_button"
	        android:layout_width="0dp"
	        android:layout_weight="1.0"
	        android:layout_height="fill_parent"
	        android:textSize="20sp"
	        android:textStyle="bold"
	        android:text="@string/color_button"
	        android:onClick="changeLightColor" />
	    
	</LinearLayout>

</RelativeLayout>
